<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ name }}</title>
    <meta name="description" content="{{ meta.description }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap">
    <link rel="stylesheet" href="./index.css">
</head>
<body>
    <div class="container">
        <header>
            <div class="photo-wrapper">
                <img class="photo" src="{{ photo }}" alt="{{ name }}">
            </div>
            <div class="header-text">
                <h1>{{ name }}</h1>
                <p class="headline">{{ tagline }}</p>
            </div>
        </header>

        <section>
            <h2>About</h2>
            {% for para in about.full.strip().split('\n\n') %}
            {% if 'MIRI' in para %}<p>{{ para | replace('MIRI', '<a href="' + about.miri_url + '">MIRI</a>') }}</p>
            {% else %}<p>{{ para }}</p>
            {% endif %}
            {% endfor %}
        </section>

        <section>
            <h2>Experience</h2>
            {% for exp in experience %}
            <div class="experience-item">
                <div class="experience-header">
                    <span class="experience-title">{{ exp.role }}</span>
                    <span class="experience-meta"> · {{ exp.org }} · {{ exp.period }}</span>
                </div>
                <p class="experience-description">{{ exp.description }}</p>
                {% if exp.highlights %}
                <ul>
                    {% for item in exp.highlights %}
                    <li>{% if item.name %}<strong>{{ item.name }}</strong> — {% endif %}{{ item.description }}
                        {% if item.tech %}<div class="tech">{{ item.tech | join(', ') }}</div>{% endif %}
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
            {% endfor %}
        </section>

        <section>
            <h2>Awards & Fellowships</h2>
            <ul class="awards-list">
                {% for award in awards %}
                <li><strong>{{ award.title }}</strong> ({{ award.year }}) — {{ award.detail }}</li>
                {% endfor %}
            </ul>
        </section>

        <section>
            <h2>Projects</h2>
            {% for project in projects %}
            <div class="project-item">
                <div class="project-header">
                    <span class="project-title">{% if project.link %}<a href="{{ project.link }}">{{ project.title }}</a>{% else %}{{ project.title }}{% endif %}</span>
                    <span class="project-meta"> · {{ project.type }} · {% if project.grade %}{{ project.grade }} · {% endif %}{{ project.year }}</span>
                </div>
                <p>{{ project.description }}</p>
            </div>
            {% endfor %}
        </section>

        <section id="publications">
            <h2>Publications</h2>
            {% for pub in publications %}
            <div class="publication-item">
                {% set author_str = pub.authors | map('bold_author') | join(', ') %}<p>{{ author_str }}{% if not author_str.endswith('.') %}.{% endif %} {% if pub.url %}<a href="{{ pub.url }}">"{{ pub.title }}"</a>{% else %}"{{ pub.title }}"{% endif %} <span class="publication-venue">{{ pub.venue }}.</span>{% if pub.note %} <span class="publication-note">{{ pub.note }}</span>{% endif %}</p>
            </div>
            {% endfor %}
        </section>

        <section>
            <h2>Education</h2>
            {% for edu in education %}
            <div class="education-item">
                <span class="education-degree">{{ edu.degree }}{% if edu.gpa %} · GPA {{ edu.gpa }}{% endif %}{% if edu.thesis_grade %}, thesis {{ edu.thesis_grade }}{% endif %}</span>
                <span class="education-meta">{{ edu.institution }} · {{ edu.period }}</span>
            </div>
            {% endfor %}
        </section>

        <section>
            <h2>Technical Skills</h2>
            <div class="skills">
                {% for skill in skills %}
                <div class="skills-row"><span class="skills-label">{{ skill.category }}:</span> {{ skill.entries | join(', ') }}</div>
                {% endfor %}
            </div>
        </section>

        <section>
            <h2>Languages</h2>
            <p>{{ languages | map(attribute='language_level') | join(' · ') }}</p>
        </section>

        <section>
            <h2>Contact</h2>
            <p>Based in {{ contact.location }}.</p>
            <div class="contact-links">
                <a href="{{ contact.github }}">GitHub</a>
                <a href="{{ contact.linkedin }}">LinkedIn</a>
                <a href="mailto:{{ contact.email }}">Email</a>
            </div>
        </section>
    </div>
</body>
</html>
